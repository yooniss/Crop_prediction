<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/three"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:orientation="horizontal"
        android:background="@drawable/two">
        <ImageView
            android:id="@+id/simpleImageView"
            android:layout_width="200dp"
            android:layout_height="400dp"
            android:src="@drawable/vegetable"
            android:layout_marginLeft="150dp"
            />
    </LinearLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TEMPERATURE"
        android:textSize="20dp"
        android:textColor="#FFE"
        android:paddingTop="30dp"
        android:textStyle="bold"
        android:fontFamily="casual"
        android:layout_marginLeft="0dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/temp"
        android:hint="enter temperature of soil"
        android:paddingTop="20dp"
        android:layout_marginLeft="160dp"
        android:paddingBottom="30dp"
        android:inputType="numberDecimal"
        android:background="@drawable/stroke"
        android:textColor="#008751"
        android:textSize="20dp"
        android:textStyle="bold"/>
    <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="PH"
             android:textSize="20dp"
             android:textColor="#FFE"
             android:layout_marginTop="100dp"
             android:paddingTop="20dp"
             android:textStyle="bold"
             android:paddingBottom="30dp"
             android:fontFamily="casual"
        android:layout_marginLeft="0dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ph"
        android:hint="enter ph of soil"
        android:layout_marginTop="100dp"
        android:paddingTop="10dp"
        android:background="@drawable/stroke"
        android:layout_marginLeft="160dp"
        android:textColor="#008751"
        android:textSize="20dp"
        android:textStyle="bold"
        android:paddingBottom="30dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HUMIDITY"
        android:textSize="20dp"
        android:textColor="#FFE"
        android:layout_marginTop="190dp"
        android:paddingTop="20dp"
        android:textStyle="bold"
        android:paddingBottom="30dp"
        android:fontFamily="casual"
        android:layout_marginLeft="0dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/humidity"
        android:hint="enter humidity of soil"
        android:layout_marginTop="190dp"
        android:paddingTop="10dp"
        android:background="@drawable/stroke"
        android:layout_marginLeft="160dp"
        android:textColor="#008751"
        android:textSize="20dp"
        android:textStyle="bold"
        android:paddingBottom="30dp"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/predict"
        android:text="PREDICTION"
        android:layout_marginTop="290dp"
        android:layout_marginLeft="150dp"
        android:textSize="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:onClick="predictClicked"
        android:textStyle="bold"
        android:fontFamily="casual"
        android:background="@drawable/stroke"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/message"
        android:paddingBottom="30dp"
        android:textSize="20dp"
        android:layout_marginTop="350dp"
        android:background="@drawable/stroke"
        android:textColor="#008751"
        />



</RelativeLayout>
</LinearLayout>